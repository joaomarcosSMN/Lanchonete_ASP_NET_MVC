<li class="dropdown">
    <a asp-controller="Lanche" asp-action="List"
       class="dropdown-toggle nav-link text-dark" data-toggle="dropdown">Lanches<b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
        @foreach (var categoria in Model)
        {
            <li>
                <a asp-controller="Lanche" asp-action="List"
                   asp-route-categoria="@categoria.CategoriaNome" class="nav-link text-dark">@categoria.CategoriaNome</a>
            </li>
        }
        <li class="dropdown-divider"></li>
        <li>
            <a asp-controller="Lanche" asp-action="List" asp-route-categoria="" class="nav-link text-dark">Ver todos os Lanches</a>
        </li>
    </ul>
</li>